<div class="col-12 p-0 border shadow-sm bg-white rounded pills mt-4">
  <BsNav
    @type="pills"
    @justified={{false}}
    @stacked={{false}}
    @fill={{false}}
  as |nav|>
    {{#if (eq this.model.profile._internalModel.modelName "institution")}}
      <nav.item>
        <ScrollTo @class="nav-link active p-0 pointer" @target="#info" @tagName="a" @duration={{1000}} @offset={{-100}}>
          <img src="img/icono-12.png" alt="Hospital" height="30px" width="auto" class="mr-2 img-white">
          Información general
        </ScrollTo>
      </nav.item>
      <nav.item>
        <ScrollTo @class="nav-link p-0 pointer" @target="#descripcion" @tagName="a" @duration={{1000}} @offset={{-100}}>
          <img src="img/icono-14.png" alt="Hospital" height="30px" width="auto" class="mr-2 img-white">
          Descripción
        </ScrollTo>
      </nav.item>
      <nav.item>
        <ScrollTo @class="nav-link p-0 pointer" @target="#abastecimiento" @tagName="a" @duration={{1000}} @offset={{-100}}>
          <img src="img/icono-30.png" alt="Guantes" height="30px" width="auto" class="mr-2 img-white">
          Abastecimiento
        </ScrollTo>
      </nav.item>
      <nav.item>
        <ScrollTo @class="nav-link p-0 pointer" @target="#compras" @tagName="a" @duration={{1000}} @offset={{-100}}>
          <img src="img/icono-1.png" alt="Guantes" height="30px" width="auto" class="mr-2 img-white">
          Compras
        </ScrollTo>
      </nav.item>
    {{/if}}
    <nav.item class="ml-auto p-3 d-none d-md-flex">
      <ShareTwitter />
      <ShareFacebook />
    </nav.item>
  </BsNav>
</div>

<div class="row m-1 my-4 bg-white panel py-5" id="info">
  {{!-- Imagen --}}
  <div class="col-md-3 text-center">
    <img
      id="photo-profile"
      src={{this.model.profile.photo}}
      alt={{this.model.profile.nombre}}
      border="0"
      class="img-responsive center-block mb-4 mb-md-0"
    >
  </div>
  {{!-- Información general --}}
  <div class="col pr-5">
    <h3>{{this.model.profile.nombre}}</h3>
    <table class="table w-100">
      <tbody>
        {{#each-in this.campos as |key campo|}}
          <tr>
            <td>
              <strong>{{campo}}: </strong> {{get this.model.profile key}}
            </td>
          </tr>
        {{/each-in}}
      </tbody>
    </table>
  </div>
  {{#if (eq this.model.profile._internalModel.modelName "profile")}}
    <div class="col-md-3 text-center align-self-center">
      <h6>Documentos</h6>
      <a
        href={{this.model.profile.cv}}
        class="btn btn-primary text-white w-100 mb-2 {{if (is-empty this.model.profile.cv) "disabled"}}"
        target="_blank"
        rel="noopener noreferrer"
      >
        Hoja de vida (PDF)
      </a>
      <a
        href={{this.model.profile.expediente}}
        class="btn btn-primary text-white w-100 mb-2 {{if (is-empty this.model.profile.expediente) "disabled"}}"
        target="_blank"
        rel="noopener noreferrer"
      >
        Expediente
      </a>
      <a
        href={{this.model.profile.resumen}}
        class="btn btn-primary text-white w-100 {{if (is-empty this.model.profile.resumen) "disabled"}}"
        target="_blank"
        rel="noopener noreferrer"
      >
        Base de datos (Resumen)
      </a>
    </div>
  {{/if}}
  {{#if (eq this.model.profile._internalModel.modelName "institution")}}
    <div class="col-md-3 text-left border-left pl-3">
      <h6>Contacto</h6>
      {{!-- Página web --}}
      {{#if this.model.profile.paginaweb}}
        <div>
          <a href="//{{this.model.profile.paginaweb}}" target="_blank" rel="noopener noreferrer">
            <img src="img/icono-web.png" alt="Página web">
            {{this.model.profile.paginaweb}}
          </a>
        </div>
      {{/if}}
      {{!-- Correo --}}
      {{#if this.model.profile.correo}}
        <div>
          <a href="//{{this.model.profile.correo}}" target="_blank" rel="noopener noreferrer">
            <img src="img/icono-correo.png" alt="Correo electrónico">
            {{this.model.profile.correo}}
          </a>
        </div>
      {{/if}}
      {{!-- Twitter --}}
      {{#if this.model.profile.twitter}}
        <div>
          <a href="https://twitter.com/{{twitter-link this.model.profile.twitter}}" target="_blank" rel="noopener noreferrer">
            <img src="img/icono-tw.png" alt="Twitter">
            @{{twitter-link this.model.profile.twitter}}
          </a>
        </div>
      {{/if}}
      {{!-- Facebook --}}
      {{#if this.model.profile.facebook}}
        <div>
          <a href="{{this.model.profile.facebook}}" target="_blank" rel="noopener noreferrer">
            <img src="img/icono-fb.png" alt="Facebook">
            {{this.model.profile.nombre}}
          </a>
        </div>
      {{/if}}
    </div>
  {{/if}}
</div>

