  {{!-- Abastecimiento --}}
  <div class="row">
    <div class="col-12" id="abastecimiento">
      <div class="panel">
        <div class="header d-flex bg-primary">
          <img src="img/icono-15.png" alt="Guantes" height="30px" width="auto" class="mr-2">
          <h3>
            Abastecimiento
          </h3>
        </div>
        <div>
          <div class="body p-1">
            <EmberChart @type="horizontalBar" @data={{this.trazadores}} @options={{this.options}} @class="p-0 p-lg-5 my-4" />
